<!DOCTYPE html>
<html>
<head>
  <title>Trips</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<h1>Trips</h1>
<ul>

<% @trips.each do |trip| %>
    <li><%= link_to trip.title, trip %> <%= trip.id %>, <%= trip.description %></li>
<% end %>

<% if @trips.empty? %>
    <p>Aucun voyage</p>
<% end %>


</ul>

</body>
</html>
