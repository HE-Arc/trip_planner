<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport"	content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes"/>
  <title>Traveler - <%= yield(:title) %></title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "styles.css" %>
</head>

<body>
<header id="head-top">

  <div id="head-top-center">

    <div id="head-top-center">

      <div class="head-top-nav">

        <%= link_to 'Accueil', index_path() %>

        <% if user_signed_in? %>
            <%= link_to 'Create Trip', create_new_trip_path() %>

            <%= link_to 'My Trips', trip_from_user_path(current_user.id) %>
        <% else %>

            <%= link_to 'Connection', user_session_url %>

        <% end %>
        <!--<a href="#">link2</a>

        <a href="#">link3</a>

        <a href="#">link4</a>-->
      </div>

      <div id="head-top-logo"><i class="fa fa-globe"></i></div>

      <div class="head-top-nav">
        <a href="#">Recherche</a>

        <!--<a href="#">link2</a>

        <a href="#">link3</a>

        <a href="#">link4</a>-->
      </div>

    </div>

  </div>

</header>

<main>


  <% flash.each do |name, msg| %>
      <% if msg.class == Array %>
          <div class="alert"><div class="center-content"><p>
          <% msg.each do |message| %>
                <i class="fa fa-exclamation-triangle"></i> <%= message %><br/>
          <% end %>
          </p></div></div>
          <% flash[:alert] = nil %>
      <% else %>
        <% if !flash["notice"].nil? %>
              <div class="notice"><div class="center-content"><p><i class="fa fa-exclamation-triangle"></i> <%= notice %></p></div></div>
          <% end %>
          <% if !flash["alert"].nil? %>
              <div class="alert"><div class="center-content"><p><i class="fa fa-exclamation-triangle"></i> <%= alert %></p></div></div>
          <% end %>
      <% end %>
  <% end %>

  <section id="user-pannel">
    <div class="center-content">
      <% if user_signed_in? %>
        <div id="button-little">
          <%= link_to 'Create Trip', create_new_trip_path() %>
        </div>
        <div id="button-little">
          <%= link_to 'My Trips', trip_from_user_path(current_user.id) %>
        </div>
        <div id="button-little">
          <%= link_to "Logout", destroy_user_session_url, :method => :delete %>
        </div>
        <div id="info-user">
          <p><%= current_user.username %></p>
        </div>
        <i class="fa fa-user" id="icon-user"></i>

      <% else %>

        <div id="button-little">
          <%= link_to "Login", user_session_url %>
        </div>
        <div id="button-little">
           <%= link_to "Subscribe", new_user_registration_url %>
        </div>

      <% end %>
    </div>
  </section>

<div class="center-content">
  <div id="button-open-pannel">

    <% if user_signed_in? %>
      <p><i class="fa fa-user"></i></p>
    <% else %>
      <p><i class="fa fa-sign-in"></i></p>
    <% end %>

  </div>
</div>



<%= yield %>
</main>


<footer>
  <div id="footer-center">

    <div class="footer-col col1">
      <h1>About</h1>
      <p>Copyright (c) All right reserved to : <br/>
        Margaux Divernois<br/>
        Steve Visinand<br/>
        Nicolas Gonin</p>
    </div>
    <div class="footer-col col2">
      <h1>Contact</h1>
    </div>
    <div class="footer-col col3">
      <h1>Hello col3</h1>
    </div>

  </div>
</footer>



</body>
